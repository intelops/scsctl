{
    "python": {
        "enabled": true
    },
    "fileMatch": [
        "(^|/)[\\w-]*requirements(-\\w+)?\\.(txt|pip)$"
    ],
    "packageRules": [
        {
            "matchBaseBranches": ["main"],
            "matchManagers": ["pip_requirements"],
            "separateMinorPatch": true
          }
    ]
}